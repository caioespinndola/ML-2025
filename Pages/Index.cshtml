@page
@model IndexModel
@{
    ViewData["Title"] = "Seu Dashboard de Estilo";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">👗 Bem-vindo ao seu IA Closet</h1>
        <p class="lead text-muted">Seu assistente de estilo pessoal, pronto para te ajudar a brilhar.</p>
    </div>

    <div class="row g-5">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-3 h-100">
                <div class="card-body p-4">
                    <h4 class="card-title text-center mb-3">🔍 Analisador de Looks</h4>
                    <ul class="nav nav-pills nav-fill mb-3" id="analysis-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="text-tab" data-bs-toggle="pill" data-bs-target="#text-pane" type="button" role="tab">Por Texto</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="image-tab" data-bs-toggle="pill" data-bs-target="#image-pane" type="button" role="tab">Por Imagem</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="analysis-tab-content">
                        <div class="tab-pane fade show active" id="text-pane" role="tabpanel">

                            <form id="form-analise-texto">
                                <textarea asp-for="InputText" id="input-analise-texto" class="form-control shadow-sm" rows="4" placeholder="Ex: Calça de alfaiataria bege, camisa de linho branca e sandálias de couro..."></textarea>

                                <button type="submit" id="btn-analisar-texto" class="btn btn-primary w-100 fw-bold mt-3">
                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                    Analisar Estilo
                                </button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="image-pane" role="tabpanel">
                            <form method="post" enctype="multipart/form-data">
                                <button type="submit" class="btn btn-primary w-100 fw-bold">Analisar Imagem</button>
                            </form>
                        </div>
                    </div>

                    <div id="resultado-analise" class="mt-4">
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-6">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Aguarda o documento carregar
        document.addEventListener("DOMContentLoaded", function() {

            // Pega os elementos do formulário
            const formAnalise = document.getElementById("form-analise-texto");
            const inputTexto = document.getElementById("input-analise-texto");
            const btnAnalise = document.getElementById("btn-analisar-texto");
            const resultadoDiv = document.getElementById("resultado-analise");
            const spinner = btnAnalise.querySelector(".spinner-border");

            // Adiciona um "ouvinte" para o envio do formulário
            formAnalise.addEventListener("submit", async function(e) {

                // 1. Impede o recarregamento da página
                e.preventDefault();

                // 2. Mostra o spinner e desabilita o botão
                spinner.classList.remove("d-none");
                btnAnalise.disabled = true;
                resultadoDiv.innerHTML = ""; // Limpa resultado anterior

                // 3. Prepara os dados para enviar para a API
                const dados = {
                    text: inputTexto.value
                };

                try {
                    // 4. Chama a API /predict que criamos (e que tem o log!)
                    const response = await fetch("/predict", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            // Adicione headers anti-falsificação se necessário
                        },
                        body: JSON.stringify(dados)
                    });

                    if (!response.ok) {
                        throw new Error("Erro na rede: " + response.statusText);
                    }

                    // 5. Pega a resposta (a predição)
                    const prediction = await response.json();

                    // 6. Constrói o HTML do resultado (igual ao que você tinha)
                    const isStylish = prediction.predictedLabel;
                    const alertClass = isStylish ? "alert-success" : "alert-warning";
                    const title = isStylish ? "Look Aprovado! 😎" : "Ponto de Atenção! 🤔";
                    const probability = (prediction.probability * 100).toFixed(1) + "%"; // Formata para porcentagem
                    const suggestion = prediction.suggestion || "Tudo certo!"; // (Seu modelo precisa retornar isso)

                    const htmlResultado = `
                        <div class="alert ${alertClass} shadow-sm">
                            <h4 class="alert-heading">${title}</h4>
                            <hr />
                            <p>${suggestion}</p> <small class="text-muted">Confiança do modelo: ${probability}</small>
                        </div>
                    `;

                    // 7. Exibe o HTML na página
                    resultadoDiv.innerHTML = htmlResultado;

                } catch (error) {
                    // 8. Mostra um erro se a API falhar
                    console.error("Falha ao analisar:", error);
                    resultadoDiv.innerHTML = `<div class="alert alert-danger">Ops! Algo deu errado ao tentar analisar.</div>`;
                } finally {
                    // 9. Esconde o spinner e re-abilita o botão
                    spinner.classList.add("d-none");
                    btnAnalise.disabled = false;
                }
            });
        });
    </script>
}